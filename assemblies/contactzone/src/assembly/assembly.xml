<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>

    <baseDirectory>ContactZone</baseDirectory>

    <!-- Include the resources dir -->
    <fileSets>
        <fileSet>
            <directory>src\main\resources</directory>
            <useDefaultExcludes>false</useDefaultExcludes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
    </fileSets>


    <dependencySets>

        <dependencySet>
            <outputDirectory>misc\DLLs\</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>com.melissadata.kettle:mdLicense</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>Windows\lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>com.melissadata:cz.library</include>
                <include>com.melissadata.kettle:MDSettings</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>Windows\plugins</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>com.melissadata.kettle:MDProfiler</include>
               <!-- <include>com.melissadata.kettle:MDSettings</include> -->
            </includes>

        </dependencySet>

    </dependencySets>



</assembly>

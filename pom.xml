<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.melissadata.kettle</groupId>
    <artifactId>cz.plugins</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>czplugins</name>
    <url>http://maven.apache.org</url>

    <properties>

        <contactzone.build.dir>${project.build.directory}\ContactZone-${project.version}\ContactZone</contactzone.build.dir>
        <module.parent.dir>${project.build.directory}..\..\..\</module.parent.dir>
        <mddata.dir>${module.parent.dir}\Data</mddata.dir>
        <!-- md files -->
        <cz.library.version>1.1-SNAPSHOT</cz.library.version>
        <mdLicense.version>1.0</mdLicense.version>
        <mdSettings.version>1.1-SNAPSHOT</mdSettings.version>
        <!-- MDBusinessCoder -->
        <mdBusinessCoder.plugin.version>1.0-SNAPSHOT</mdBusinessCoder.plugin.version>
        <!-- MDCheck -->
        <mdCheck.plugin.version>1.0-SNAPSHOT</mdCheck.plugin.version>
        <mdAddr.dll.version>4.0.1.3067</mdAddr.dll.version>
        <mdEmail.dll.version>4.0.1.3067</mdEmail.dll.version>
        <mdGeo.dll.version>4.0.1.3116</mdGeo.dll.version>
        <mdName.dll.version>4.0.1.3067</mdName.dll.version>
        <mdPhone.dll.version>4.0.1.3067</mdPhone.dll.version>
        <mdIpLocator.dll.version>4.0.1.3036</mdIpLocator.dll.version>
        <mdMatchUp.dll.version>5.0.0.5009</mdMatchUp.dll.version>
        <!-- MDCleanser -->
        <mdCleanser.plugin.version>1.0-SNAPSHOT</mdCleanser.plugin.version>
        <mdCleanser.dll.version>1.0.0.2967</mdCleanser.dll.version>
        <!-- MDGlobal Verify -->
        <mdGlobalVerify.plugin.version>1.0-SNAPSHOT</mdGlobalVerify.plugin.version>
        <mdGlobal.dll.version>1.0.0.3030</mdGlobal.dll.version>
        <!-- MDPersonator -->
        <mdPersonator.plugin.version>1.0-SNAPSHOT</mdPersonator.plugin.version>
        <!-- MDProfiler -->
        <mdProfiler.plugin.version>1.0-SNAPSHOT</mdProfiler.plugin.version>
        <mdProfiler.dll.version>4.0.1.3036</mdProfiler.dll.version>
        <!-- MDProperty -->
        <mdProperty.plugin.version>1.0-SNAPSHOT</mdProperty.plugin.version>
        <!-- Encoding -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- DATA PATHS -->
        <address.data.path></address.data.path>
        <cleanser.data.path></cleanser.data.path>
        <email.data.path></email.data.path>
        <geocode.data.path></geocode.data.path>
        <iplocator.datapath></iplocator.datapath>
        <name.data.path></name.data.path>
        <phone.data.path></phone.data.path>
        <profiler.data.path></profiler.data.path>
        <matchup.data.path></matchup.data.path>
        <matchupglobal.data.path></matchupglobal.data.path>

    </properties>


    <modules>
        <module>cz.library</module>
        <module>MDSettings</module>
        <module>assemblies/contactzone</module>
    </modules>

    <build>
        <finalName>ContactZone-${project.version}</finalName>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>3.1.0</version>
                    <configuration>
                        <appendAssemblyId>false</appendAssemblyId>
                        <descriptors>
                            <descriptor>assemblies\contactzone\src\assembly\assembly.xml</descriptor>
                        </descriptors>
                    </configuration>
                    <executions>
                        <execution>
                            <id>make-assembly</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
